{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "storage": {
    "rules": "storage.rules"
  },
  "functions": [
    {
      "source": "packages/firebase-functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ],
      "predeploy": ["pnpm --prefix functions run build"]
    }
  ],
  "extensions": {
    "firestore-stripe-payments": "invertase/firestore-stripe-payments@0.3.10"
  }
}
